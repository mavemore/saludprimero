extend dash_operario

block content 
	.col-md-9			
		+panel-default("Resultados de Busqueda")
			.panel-body
				.table-responsive
					table#tblMuestras.table.table-hover
						thead
							tr
								th Seleccion
								th Codigo
								th Fecha Toma Muestra
								th Tipo de Muestra
								th Paciente
								th Estado
								th Editar
						tbody
							if hasMuestras
								each muestra in muestras
									tr
										td 
											input(type='checkbox', value='')
										td=muestra.codigo
										td
										td
										td
										td
										td Lapiz Glyphicon

			button#btnNuevo.col-md-4.btn(type="button") Agregar Muestra
			button#btnEliminar.col-md-4.col-md-offset-4.btn(data-toggle="modal",data-target="#alerta") Eliminar
		#alerta.modal.fade(tabindex="-1",role="dialog")
			.modal-dialog
				.modal-content
					.modal-header
						button.close(type="button",data-dismiss="modal")
							span(aria-hidden="true") &times;
							span.sr-only Close
						h4.modal-title Alerta
					.modal-body
						¿Está seguro que desea eliminar las muestras seleccionadas?
					.modal-footer
						button.btn.btn-default(type='button', data-dismiss='modal') Cancelar
						button.btn.btn-default(type='button', data-dismiss='modal') Aceptar