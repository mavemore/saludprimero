extend dash_operario

block content 
	.col-md-9			
		+panel-default("Resultados de Busqueda")
			.panel-body
				.table-responsive
					table#tblMuestras.table.table-hover
						thead
							tr
								th Codigo
								th Fecha Toma Muestra
								th Tipo de Muestra
								th Paciente
								th Estado
								th Editar
								th Eliminar
						tbody
								each muestra in muestras
									tr
										td=muestra.codigo
										td=muestra.fecha
										td=muestra.tipo
										td=muestra.paciente
										td=muestra.estado
										td
											button.btnEditar.btn(type="submit") Editar
										td
											button.btnEliminarMuestra.btn(type="submit") Eliminar
			a(href='/operario/ingreso-muestras').col-md-4.btn
				|Agregar Muestra
			//button#btnNuevo.col-md-4.btn(type="button", href = "/operario/ingreso-muestras") Agregar Muestra
			//button#btnEliminar.col-md-4.col-md-offset-4.btn(data-toggle="modal",data-target="#alerta") Eliminar
		#alerta.modal.fade(tabindex="-1",role="dialog")
			.modal-dialog
				.modal-content
					.modal-header
						button.close(type="button",data-dismiss="modal")
							span(aria-hidden="true") &times;
							span.sr-only Close
						h4.modal-title Alerta
					.modal-body
						¿Está seguro que desea eliminar las muestras seleccionadas?
					.modal-footer
						button.btn.btn-default(type='button', data-dismiss='modal') Cancelar
						button.btn.btn-default(type='button', data-dismiss='modal') Aceptar
append scripts
	script
		include ../../public/javascripts/operario.js
