extends dash_user

block content
	.col-md-9
		+panel-default("Datos de Usuario")
			form.form-horizontal(action='/usuario/perfil/editUser', method='post')
				.row
					.pull-right.col-md-4
						img#imgUsuario.img-rounded.img-thumbnail(src='', alt='foto de perfil de usuario')
					.col-md-10
						h3 Información General
						.form-group.form-inline.required 
							label.control-label.col-md-2(for='nombreUsuario') Nombres:

							input#nombreUsuario.form-control.col-md-6(type='text', required='', maxlength='30',pattern="[a-zA-Z ]+", title="-Solo letras", name='nombres')
						.form-group.form-inline.required 
							label.control-label.col-md-2(for='apellidoUsuario') Apellidos:
							input#apellidoUsuario.form-control.col-md-6(type='text', required='', maxlength='30',pattern="[a-zA-Z ]+", title="-Solo letras", name='apellidos')
						.form-group.form-inline.required 
							label.control-label.col-md-2(for='IDUsuario') Cédula:
							input#IDUsuario.form-control.col-md-6(type='text', required='', pattern="[0-9]{10}", title="-Requiere 10 caracteres\n-Solo números", maxlength='10', value="#{usuarioInfoList[0].cedula}", name='cedula')
						.form-group.form-inline.required 
							label.control-label.col-md-2(for='emailUsuario') Correo Electrónico:
							input#emailUsuario.form-control.col-md-6(type='email', required='', maxlength='30', value="#{usuarioInfoList[0].email}", name='email', readonly='')
						.form-group.form-inline
							label.control-label.col-md-2(for='dirUsuario') Dirección:
							input#dirUsuario.form-control.col-md-6(type='text', maxlength='50', value="#{usuarioInfoList[0].dir}", name='direccion')
						.form-group.form-inline
							label.control-label.col-md-2(for='telUsuario') Teléfonos:
							input#telUsuario.form-control.col-md-6(type='text', maxlength='15',pattern="[0-9]+", title="-Solo números", value="#{usuarioInfoList[0].telf}", name='telefono')
				button#btnGuardar.col-md-2.col.btn(type="submit") Guardar Cambios
			form.form-horizontal
				.row
					.pull-right.col-md-4
					.col-md-10
						h3 Cambiar Contraseña
						.form-group.form-inline
							label.control-label.col-md-2(for='passUsuario') Contraseña:
							input#passUsuario.form-control.col-md-6(type='password')
						.form-group.form-inline
							label.control-label.col-md-2(for='passNueva') Nueva Contraseña:
							input#passNueva.form-control.col-md-6(type='password')

				button#btnGuardar.col-md-2.col.btn(type="submit") Guardar Cambios
