extends dash_lab

block content
	.col-md-9
		+panel-default("Muestras")
			.panel-body
				.table-responsive
					table#tblMuestras.table.table-hover
						thead
							tr
								th Seleccion
								th Codigo
								th Fecha Toma Muestra
								th Tipo de Muestra
								th Paciente
								th Notificar
						tbody
							each examen in examenes
								tr
									td 
										input(type='checkbox', value='')
									td codigo
									td=examen.fechaMuestra
									td=examen.tipoMuestra
									td paciente de muestra
									td 
										button.btnNotificar.btn(type="button") Notificar
			button#btnRecibido.col-md-4.col-md-offset-4.btn(data-toggle="modal",data-target="#alerta") Recibido
		#alerta.modal.fade(tabindex="-1",role="dialog")
			.modal-dialog
				.modal-content
					.modal-header
						button.close(type="button",data-dismiss="modal")
							span(aria-hidden="true") &times;
							span.sr-only Close
						h4.modal-title Alerta
					.modal-body
						p Si da click en Aceptar, confirma el recibo de las muestras seleccionadas y el estado de ellas ser√° "En espera".
					.modal-footer
						button.btn.btn-default(type='button', data-dismiss='modal') Cancelar
						button.btn.btn-default(type='button', data-dismiss='modal') Aceptar
append scripts
	script
		include ../../public/javascripts/laboratorista.js